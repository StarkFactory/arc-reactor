# Arc Reactor quickstart config example
# Copy to your local runtime config as needed:
#   cp application.yml.example arc-core/src/main/resources/application-local.yml
# or provide the same values via environment variables.

server:
  port: 8080

spring:
  ai:
    # Default provider: Gemini
    google:
      genai:
        api-key: ${GEMINI_API_KEY}
        chat:
          options:
            model: gemini-2.0-flash

    # Optional providers (uncomment when dependency is enabled)
    # openai:
    #   api-key: ${SPRING_AI_OPENAI_API_KEY}
    # anthropic:
    #   api-key: ${SPRING_AI_ANTHROPIC_API_KEY}

arc:
  reactor:
    llm:
      default-provider: gemini
      temperature: 0.3
      max-output-tokens: 4096
    concurrency:
      request-timeout-ms: 30000
      tool-call-timeout-ms: 15000
    guard:
      enabled: true

    # Optional feature toggles (all opt-in except guard/security headers)
    # rag:
    #   enabled: true
    # slack:
    #   enabled: true
    #   bot-token: ${SLACK_BOT_TOKEN}
    #   app-token: ${SLACK_APP_TOKEN}
    #   signing-secret: ${SLACK_SIGNING_SECRET}
    #   tools:
    #     enabled: true
    #     bot-token: ${SLACK_BOT_TOKEN}
    # auth:
    #   enabled: true
    # cors:
    #   enabled: true
    # circuit-breaker:
    #   enabled: true

logging:
  level:
    com.arc.reactor: INFO
